{
  "appId": "com.yourcompany.stirling-engine-monitor",
  "productName": "Matrix Stirling Engine",
  "directories": {
    "output": "dist"
  },
  "files": [
    "**/*",
    "!node_modules/chart.js/dist/chart.min.js",
    "!dist/**/*",
    "!*.md",
    "!setup.js",
    "!install.bat"
  ],
  "win": {
    "target": "nsis",
    "icon": "assets/icon.ico"
  },
  "mac": {
    "target": "dmg",
    "icon": "assets/icon.icns"
  },
  "linux": {
    "target": "AppImage",
    "icon": "assets/icon.png"
  }
}

