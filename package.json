{
  "name": "stirling-engine-monitor",
  "version": "1.0.0",
  "description": "A simple Electron app for monitoring Stirling Engine temperature data with Chart.js",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac",
    "build-linux": "electron-builder --linux",
    "dist": "electron-builder --publish=never",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "electron",
    "stirling-engine",
    "chart.js",
    "temperature-monitoring"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "chart.js": "^4.4.0",
    "serialport": "^12.0.0"
  },
  "build": {
    "appId": "com.yourcompany.stirling-engine-monitor",
    "productName": "Matrix Stirling Engine",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/chart.js/dist/chart.min.js",
      "!dist/**/*"
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  }
}
