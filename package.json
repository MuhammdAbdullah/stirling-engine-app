{
  "name": "stirling-engine-monitor",
  "version": "1.0.0",
  "description": "A simple Electron app for monitoring Stirling Engine temperature data with Chart.js",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac",
    "build-linux": "electron-builder --linux",
    "build-linux-arm64": "electron-builder --linux --arm64",
    "build-linux-armv7l": "electron-builder --linux --armv7l",
    "dist": "electron-builder --publish=never",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "electron",
    "stirling-engine",
    "chart.js",
    "temperature-monitoring"
  ],
  "author": {
    "name": "Your Name",
    "email": "your.email@example.com"
  },
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "chart.js": "^4.4.0",
    "serialport": "^12.0.0"
  },
  "build": {
    "appId": "com.yourcompany.stirling-engine-monitor",
    "productName": "Matrix Stirling Engine",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/chart.js/dist/chart.min.js",
      "!dist/**/*",
      "lib/**/*",
      "node_modules/chart.js/dist/chart.umd.js",
      "data-worker.js",
      "stirling-data-parser.js",
      "node_modules/serialport/**/*",
      "node_modules/@serialport/**/*"
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "tar.gz"
      ],
      "icon": "assets/android-chrome-512x512.png",
      "category": "Utility"
    }
  }
}
